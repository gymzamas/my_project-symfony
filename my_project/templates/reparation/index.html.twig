{% extends 'base.html.twig' %}

{% block title %}Liste des Réparations{% endblock %}

{% block body %}
    <style>
        /* Global Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f0f2f5;
            color: #2c3e50;
        }

        h2 {
            text-align: center;
            color: #FF0000; /* Rouge */
            margin-bottom: 20px;
        }

        .reparation-table {
            width: 90%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .reparation-table thead {
            background-color: #000000; /* Noir */
            color: #FFD700; /* Jaune */
        }

        .reparation-table th, .reparation-table td {
            padding: 12px 15px;
            text-align: left;
        }

        .reparation-table th {
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
        }

        .reparation-table tbody tr {
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s ease;
        }

        .reparation-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .reparation-table tbody tr:hover {
            background-color: #008000; /* Vert */
            color: #FFFFFF; /* Blanc */
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .reparation-table {
                width: 100%;
                font-size: 14px;
            }

            .reparation-table th, .reparation-table td {
                padding: 10px;
            }
        }

        @media (max-width: 480px) {
            .reparation-table thead {
                display: none;
            }

            .reparation-table tr {
                display: block;
                margin-bottom: 15px;
                border-bottom: 2px solid #ddd;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .reparation-table td {
                display: block;
                text-align: right;
                padding-left: 50%;
                position: relative;
            }

            .reparation-table td::before {
                content: attr(data-label);
                position: absolute;
                left: 10px;
                width: 45%;
                padding-right: 10px;
                text-align: left;
                font-weight: bold;
            }
        }
    </style>

    <h2>Liste des Réparations</h2>
    <table class="reparation-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Date</th>
                <th>Coût</th>
                <th>Nom du Client</th>
                <th>Adresse</th>
                <th>Téléphone</th>
            </tr>
        </thead>
        <tbody>
            {% for reparation in reparations %}
                <tr>
                    <td data-label="ID">{{ reparation.id }}</td>
                    <td data-label="Description">{{ reparation.description }}</td>
                    <td data-label="Date">{{ reparation.date|date('d/m/Y') }}</td>
                    <td data-label="Coût">{{ reparation.cout }}</td>
                    <td data-label="Nom du Client">{{ reparation.client.nom }}</td>
                    <td data-label="Adresse">{{ reparation.client.adresse }}</td>
                    <td data-label="Téléphone">{{ reparation.client.telephone }}</td>
                </tr>
            {% else %}
                <!-- Example Repairs with Client Details -->
                <tr>
                    <td data-label="ID">1</td>
                    <td data-label="Description">Changement de courroie</td>
                    <td data-label="Date">15/08/2024</td>
                    <td data-label="Coût">150 €</td>
                    <td data-label="Nom du Client">Jean Dupont</td>
                    <td data-label="Adresse">123 Rue Principale, Paris</td>
                    <td data-label="Téléphone">0123456789</td>
                </tr>
                <tr>
                    <td data-label="ID">2</td>
                    <td data-label="Description">Réparation moteur</td>
                    <td data-label="Date">10/07/2024</td>
                    <td data-label="Coût">500 €</td>
                    <td data-label="Nom du Client">Marie Curie</td>
                    <td data-label="Adresse">45 Avenue des Champs, Paris</td>
                    <td data-label="Téléphone">0987654321</td>
                </tr>
                <tr>
                    <td data-label="ID">3</td>
                    <td data-label="Description">Entretien général</td>
                    <td data-label="Date">20/06/2024</td>
                    <td data-label="Coût">100 €</td>
                    <td data-label="Nom du Client">Alain Prost</td>
                    <td data-label="Adresse">78 Boulevard Saint-Michel, Paris</td>
                    <td data-label="Téléphone">0147852369</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
